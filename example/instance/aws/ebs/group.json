{
    "ID": "aws_ebs_demo",
    "Properties": {
        "Instance" : {
            "Plugin": "aws-ebs",
            "Properties": {
                "DiscoverDefaults" : true,
                "Tags" : {
                    "env" : "dev",
                    "instance-plugin" : "aws-ebs"
                },
                "CreateVolumeInput" : {
                    "Size" : 100
                }
            }
        },
        "Flavor" : {
            "Plugin": "flavor-vanilla",
            "Properties": {
                "Size" : 5,
                "UserData" : [
                    "sudo apt-get update -y",
                    "sudo apt-get install -y nginx",
                    "sudo service nginx start"
                ]
            }
        }
    }
}
