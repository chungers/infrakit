{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "simple": {
            "format": "%(asctime)s azupgrade %(levelname)s: %(message)s"
        },
        "stdout": {
            "format": "%(levelname)s: %(message)s"
        }
    },
    "handlers": {
        "file_handler_modules": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "ERROR",
            "formatter": "simple",
            "filename": "/var/log/docker/azupgrade_modules.log",
            "maxBytes": 1048576,
            "backupCount": 10,
            "encoding": "utf8"
        },
        "console": {
            "class": "logging.StreamHandler",
            "level": "INFO",
            "formatter": "stdout",
            "stream": "ext://sys.stdout"
        },
        "file_handler_actions": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "DEBUG",
            "formatter": "simple",
            "filename": "/var/log/docker/azupgrade_actions.log",
            "maxBytes": 1048576,
            "backupCount": 10,
            "encoding": "utf8"
        }
    },
    "loggers": {
        "azupg": {
            "level": "DEBUG",
            "handlers": ["file_handler_actions", "console"],
            "propagate": "no"
        }
    },
    "root": {
        "level": "ERROR",
        "handlers": ["file_handler_modules"]
    }
}
